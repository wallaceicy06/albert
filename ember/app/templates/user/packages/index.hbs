<div class="uk-width-1-1">
    <table class="uk-table uk-table-striped">
      <thead>
        <tr>
          <th>barcode</th>
          <th>owner</th>
          <th>checked in</th>
          <th><!-- controls --></th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedList as |package|}}
          <tr>
            <td>{{package.barcode}}</td>
            <td>{{package.owner.firstName}}</td>
            <td>{{ago package.timeCheckin}}</td>
            <td>
              {{#if package.pickedUp}}
                <i class="uk-icon-check-circle"></i>
              {{else}}
                <button class="uk-button uk-button-mini uk-button-primary" {{action 'pickup' package}}><i class="uk-icon-check"></i></button>
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{#if sortedList}}
  {{else}}
    <p>There are no packages to display.</p>
  {{/if}}
</div>
