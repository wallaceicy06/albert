<form class="uk-form" {{action "create" on="submit"}}>
  <fieldset data-uk-margin>
    <legend>New package</legend>
    <div class="uk-form-row">
      {{autofocus-text-field type="text" value=model.barcode placeholder="barcode"}}
    </div>
    <div class="uk-form-row">
      {{uikit-autocomplete textEntered=(action 'search') value=newOwnerId placeholder="owner username"}}
    </div>
    <div class="uk-form-row">
      <button class="uk-button uk-button-primary" type="submit">Submit</button>
      {{#link-to 'admin.packages.index' class="uk-button"}}Close{{/link-to}}
    </div>
  </fieldset>
</form>



